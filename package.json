{
  "name": "debug-draw",
  "version": "1.1.0",
  "description": "A simple renderer support several debug draw methods.",
  "main": "dist/debug-draw.js",
  "scripts": {
    "build:dev": "rollup -c ./script/rollup.config.js",
    "build:min": "uglifyjs ./dist/debug-draw.dev.js --mangle --source-map ./dist/debug-draw.min.js.map -o ./dist/debug-draw.min.js",
    "release": "npm run build:dev && npm run build:min",
    "start": "electron",
    "server": "preview -p 8003 -e examples",
    "dev": "rollup -w -c ./script/rollup.config.js",
    "test": "npm run build:dev && tap test/*.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gamedev-js/debug-draw.git"
  },
  "keywords": [
    "debug",
    "draw",
    "renderer"
  ],
  "author": "jwu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gamedev-js/debug-draw/issues"
  },
  "homepage": "https://github.com/gamedev-js/debug-draw/issues",
  "dependencies": {
    "input.js": "^1.1.2",
    "regl": "^1.3.0",
    "scene-graph": "^1.0.2",
    "vmath": "^1.1.1"
  },
  "devDependencies": {
    "electron": "^1.6.3",
    "fs-jetpack": "^0.13.0",
    "preview-server": "^1.0.7",
    "pstats.js": "^1.1.0",
    "rollup": "^0.41.4",
    "rollup-watch": "^3.2.2",
    "uglify-js": "git+https://github.com/mishoo/UglifyJS2.git#harmony"
  }
}
